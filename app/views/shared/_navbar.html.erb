<% if user_masquerade? %>
  <div class="alert alert-warning text-center">
    You're logged in as <b><%= current_member.name %> (<%= current_member.email %>)</b>
    <%= link_to back_masquerade_path(current_member) do %><%= icon("fas", "times") %> Logout <% end %>
  </div>
<% end %>

<nav class="navbar navbar-expand-md navbar-light bg-light">
  <div class="container">
  <a href='/'>
      <%=image_tag 'logo.png', class: "navbar-brand", style: 'height:5em;width:auto;'%>
  </a>
     
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarMain" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    

    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
      </ul>





      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "¿Que hay de nuevo?", announcements_path, class: "nav-link #{unread_announcements(current_user)}" %></li>
        <% if member_signed_in? %>

        <li class="nav-item">
          <%= link_to notifications_path, class: "nav-link" do %>
            <span><i class="fa fa-flag-o" aria-hidden="true"></i></span>
          <% end %>
         </li>
<%if current_user %>

        <li class="nav-item"><%= link_to "Conversaciones", conversations_path, class: "nav-link" %></li>

          <li class="nav-item dropdown">
            <%= link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
              <%= image_tag gravatar_image_url(current_user.email, size: 40), height: 20, width: 20, class: "rounded" %>
            <% end %>
            <div id="nav-account-dropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-dropdown">
              <% if current_user.admin? %>
                <%= link_to "Administración", admin_root_path, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Ajustes", edit_user_registration_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
<%elsif current_doctor%>
        <li class="nav-item"><%= link_to "Conversaciones", conversations_path, class: "nav-link" %></li>

      <li class="nav-item dropdown">
            <%= link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
              <%= image_tag gravatar_image_url(current_doctor.email, size: 40), height: 20, width: 20, class: "rounded" %>
            <% end %>
            <div id="nav-account-dropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="navbar-dropdown">

              <%= link_to "Ajustes", edit_doctor_registration_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Cerrar Sesión", destroy_doctor_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>


<%end%>
        <% else %>
          <li class="nav-item"><%= link_to "Registrate", new_user_registration_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Inicia Sesión", new_user_session_path, class: "nav-link" %></li>
          <li class="nav_item"><%= link_to "Eres Psicólogo?", new_doctor_registration_path, class: "nav-link"%></li>
        <% end %>

      </ul>
