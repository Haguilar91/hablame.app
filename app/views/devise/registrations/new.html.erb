<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">Bienvenido a Hablame.app</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Tú nombre" %>
      </div>

      <div class="form-group">
      <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: "Tú nombre de usuario" %>
     </div>

     <div class="form-group">
        <%= f.text_field :age, autofocus: true, class: 'form-control', placeholder: "Tú edad" %>
    </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Tú E-Mail" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Tú contraseña' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Escribe de nuevo tú contraseña' %>
      </div>

      <div class="form-group">
        <%= f.submit "Bienvenido", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
