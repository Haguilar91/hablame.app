<% if current_user %>
<div class="jumbotron bg-dark">
  <h3 class=""  style="color:white;">Nueva Conversacion con <%=@recipients.name%></h3>
  <% if current_doctor%>
        <h4>Valor Consulta:&nbsp;USD 31</h4>
  <%else%>
         <h4>Valor Consulta:&nbsp;USD 25</h4>
  <%end%>
</div>

<div class="container-fluid" style="padding-top:2em;">
  <div class="row">
    <div class="col-2" align="center"></div>
    <div class="col-8" >
        <%= form_tag conversations_path, method: :post do %>
        <%= hidden_field_tag(:user_id, "#{params[:doctor_id]}") %>
        <div>
          <%= text_field_tag :subject, nil, placeholder: "Asunto" %>
        </div>
      
        <div>
          <%= text_area_tag :body, nil, placeholder: "Manda tu mensaje" %>
        </div>

        <%= submit_tag %>
      <% end %>
      <br>
    <a href="/checkouts/new" class="btn btn-success"><i class="fas fa-money-bill"></i>&nbsp;Pagar Consulta</a>
    </div>
    <div class="col-2" align="center"></div>
  </div>
</div>
<%else%>
<div class=jumbotron>
<h1>Aviso</h1>
<p> No tienes permitido entrar aqui.</p>
</div>
<%end%>

		


						



